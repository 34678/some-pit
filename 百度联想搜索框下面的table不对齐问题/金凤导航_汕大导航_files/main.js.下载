(function($){var imgWidh=1920,imgHeight=1080;var imgRatio=imgWidh/imgHeight;var $bgDiv=$("#bgDiv");var offsetLeft=0,offsetTop=0;var resize=function(){var winWidth=window.innerWidth,winHeight=window.innerHeight;var winRatio=winWidth/winHeight;if(winWidth>imgWidh){$bgDiv.css({width:imgWidh,height:imgHeight});}else{if(winRatio>imgRatio){offsetLeft=0;offsetTop=(Math.ceil(winWidth/imgRatio)- winHeight)/ 2;$bgDiv.css({width:winWidth,height:winWidth/imgRatio,top:-offsetTop,left:offsetLeft});}else if(winRatio<imgRatio){offsetLeft=(Math.ceil(winHeight*imgRatio)- winWidth)/ 2;offsetTop=0;$bgDiv.css({width:winHeight*imgRatio,height:winHeight,top:offsetTop,left:-offsetLeft});}}};resize();$(window).on("resize",resize);})(jQuery);